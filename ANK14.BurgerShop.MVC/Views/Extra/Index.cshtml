
@model ExtraViewModel

@{
    ViewData["Title"] = "Extra List";
}

<h2>@ViewBag.Error</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AdditionalPrice"></label>
        <input asp-for="AdditionalPrice" class="form-control" />
        <span asp-validation-for="AdditionalPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>

<h2>Extra List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Additional Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var extra in ViewBag.Extras)
        {
            <tr>
                <td>@extra.Name</td>
                <td>@extra.AdditionalPrice</td>
                <td>
                    <a asp-action="Update" asp-route-id="@extra.Id">Update</a>
                    <a asp-action="Delete" asp-route-id="@extra.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

