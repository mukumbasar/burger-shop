@model MenuSizeViewModel

<h2 class="text-danger">@ViewBag.Error</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AdditionalPrice"></label>
        <input asp-for="AdditionalPrice" class="form-control" />
        <span asp-validation-for="AdditionalPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>

<h2>Menu Size List</h2>

<table class="grid table" id="MenuSizes">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Additional Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var extra in ViewBag.MenuSizes)
        {
            <tr>
                <td>@extra.Id</td>
                <td>@extra.Name</td>
                <td>@extra.AdditionalPrice</td>
                <td>
                    <a class="details btn btn-dark">Get Menu Size</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="partialModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Data Modal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">
        $(function () {
            $("#MenuSizes .details").click(function () {
                var id = $(this).closest("tr").find("td").eq(0).html();

                $.ajax({
                    type: "GET",
                    url: "/MenuSize/GetMenuSize",
                    data: { "id": id },
                    success: function (response) {
                        $("#partialModal").find(".modal-body").html(response);
                        $("#partialModal").modal('show');
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });
        });
    </script>
}



