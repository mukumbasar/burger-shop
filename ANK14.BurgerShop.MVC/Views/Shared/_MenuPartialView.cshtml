@model MenuViewModel



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-warning">
                <form asp-action="Update" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="text-dark">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="text-dark">Price</label>
                        <input asp-for="Price" class="form-control" min="1" max="1000" step="1" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Photo" class="text-dark">Photo</label>
                        <input asp-for="Photo" class="form-control" type="file" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <br />
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
