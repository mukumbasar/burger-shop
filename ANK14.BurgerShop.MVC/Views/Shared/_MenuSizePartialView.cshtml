@model MenuSizeViewModel

<div class="alert alert-info">

    <form asp-action="Update" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="Id" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AdditionalPrice"></label>
            <input asp-for="AdditionalPrice" class="form-control" />
            <span asp-validation-for="AdditionalPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary">Delete</a>
        </div>
    </form>

</div>