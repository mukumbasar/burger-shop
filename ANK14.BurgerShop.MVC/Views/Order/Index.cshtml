@model List<MenuViewModel>
﻿@using ANK14.BurgerShop.Entities.Concretes;
﻿﻿@using Microsoft.AspNetCore.Identity;
@inject SignInManager<AppUser> SignInManager
<div class="d-flex flex-row justify-content-center">
@foreach (var item in Model)
{
    

        <div class="card mx-2" style="width: 18rem; background-color: #f8f9fa;">
            <img src="@item.PhotoPath" alt="@item.Name" width="200" height="200" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Price ₺</p>
                @if (User?.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a asp-action="Place" asp-route-id="@item.Id" class="btn btn-warning">Choose Menu</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-warning">Login to Choose a Menu</a>
                }
            </div>
        </div>

}
</div>

